<block wx:if="{{$taroCompReady}}">
    <view class="referBox">
        <view class="titleBox fontTitle">{{referInfo.title}}</view>
        <scroll-view scroll-x="{{true}}">
            <view class="scrollView">
                <view wx:key="id" class="scrollItem" wx:for="{{referInfo.list}}" wx:for-item="val" wx:for-index="_anonIdx2">
                    <image mode="aspectFill" src="{{val.thumb}}"></image>
                    <view class="infoBox">
                        <view class="title ">{{val.title}}</view>
                        <block wx:if="{{val.info}}">
                            <view class="info ">{{val.info}}</view>
                        </block>
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>
</block>